{
	"include": [
		"src/**/*",
    // "src/lib/api-keys.json"
	],
  // "copyFiles": ["src/lib/api-keys.json"],
	"exclude": [
		"../../node_modules",
		"node_modules",
    ".vscode-test"
	],
	"compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "skipLibCheck": true,

    "composite": true,
    /* Bundler mode */
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,


    "sourceMap": true,
    // "outDir": "./out",  // Specify the output directory
    "rootDir": "./src", // Specify the root directory of your source files
    /* for ShadCN */
    "baseUrl": ".",
    "paths": {
      // "vs/editor/browser/widget/*": ["src/vs/editor/browser/widget/*"],
      "vs/editor/browser/widget/*": ["../../src/vs/editor/browser/widget/*"],
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
	}
}

